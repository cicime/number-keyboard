.keyboard
  position fixed
  bottom: 0
  left: 0
  width: 100%
  height: 36%
  font-size: 0
  background: #fff
  z-index: 200

  &-table
    width: 100%
    height: 100%
    border-collapse: collapse;
    margin: 0

  &-key
    width: 30%
    text-align center
    border 1px solid #f0f0f0
    height: 25%
    font-size: 18px
    font-weight: bold
    color: #8cab5b

    &:active
      background: #f0f0f0