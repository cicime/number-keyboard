.modinput
  width: 80%
  height: 45px
  background: #fff
  border-radius 5px
  margin 20px auto 0
  text-align center
  font-size: 32px
  line-height: 45px

.keyboard
  position fixed
  bottom: 0
  left: 0
  width: 100%
  height: 36%
  font-size: 0
  background: #fff
  box-shadow 0 3px 5px rgba(0, 0, 0, .2)
  z-index: 200

  &-table
    width: 100%
    height: 100%
    border-collapse: collapse;
    margin: 0

  &-key
    width: 30%
    text-align center
    border 1px solid #f0f0f0
    height: 25%
    font-size: 18px
    font-weight: bold
    color: #8cab5b

    &:active
      background: #f0f0f0

  &-flash
    color: blue
    animation flash .8s linear infinite
  @keyframes flash
    0%
      opacity 0
    50%
      opacity 1
    100%
      opacity 0
